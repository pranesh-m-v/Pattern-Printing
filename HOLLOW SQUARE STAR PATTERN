#include <stdio.h>

int main()
{
    int r, c;
    scanf("%d", &r);
    scanf("%d", &c);
    for(int i=1; i<=r; i++)
    {
        for(int j=1; j<=c; j++)
        {
            if(i == 1 || i == r)
            {
                printf("*");
                continue;
            }
            if(j ==1 || j == c)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
    
        printf("\n");
    }
    
    return 0;
}
