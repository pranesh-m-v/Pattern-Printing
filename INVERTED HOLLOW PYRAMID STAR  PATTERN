#include<stdio.h>
int main()
{
    int n;
    scanf("%d", &n);
    for(int i=n; i>0; i--)
    {
        for(int s=n-i; s>0; s--)
        {
            printf(" ");
        }
        for(int j=2*i-1; j>0; j--)
        {
            if(j==2*i-1 || j==1 || i==n)
                printf("*");
            else
                printf(" ");
        }
        printf("\n");
    }
}
